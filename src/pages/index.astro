---
import Layout from '../layouts/Layout.astro';
import InvitationCard from '../components/InvitationCard.astro';
import AcceptedCard from '../components/AcceptedCard.astro';
---

<Layout title="Invitación de San Valentín">
  <main class="flex flex-col items-center justify-center p-4">
    <div id="invitation-section">
      <InvitationCard client:load />
    </div>
    <div id="accepted-section" class="hidden">
      <AcceptedCard />
    </div>
  </main>
</Layout>

<script>
  const invitationSection = document.getElementById('invitation-section');
  const acceptedSection = document.getElementById('accepted-section');

  document.addEventListener('invite:accept', () => {
    if (invitationSection && acceptedSection) {
      invitationSection.classList.add('hidden');
      acceptedSection.classList.remove('hidden');
    }
  });
</script>